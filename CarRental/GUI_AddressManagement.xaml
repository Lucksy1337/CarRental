        <TextBox x:Name="textBoxZipCode" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="135,129,0,0"/>
        <Button x:Name="buttonCreateAddress" Content="Adresse erstellen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="152" Margin="59,185,0,0" Height="41" FontSize="14" Click="buttonCreateAddress_Click"/>
    </Grid>
</Window>